total = 0
quantidade = 0
maior_preco = 0

continuar = "s"

while continuar == "s":
    preco = -1
    while preco < 0:
        preco = float(input("Digite o preço do produto (não pode ser negativo): "))
        if preco < 0:
            print("Preço inválido! Tente novamente.\n")

    total += preco
    quantidade += 1

    if preco > maior_preco:
        maior_preco = preco

    resposta = ""
    while resposta != "s" and resposta != "n":
        resposta = input("Deseja adicionar outro produto? (s/n): ").lower()
        if resposta != "s" and resposta != "n":
            print("Resposta inválida! Use apenas s ou n.\n")

    continuar = resposta

if quantidade > 0:
    media = total / quantidade
    print("\n=== RESUMO DA COMPRA ===")
    print("Total da compra: R$", total)
    print("Quantidade de produtos:", quantidade)
    print("Valor médio por produto: R$", media)
    print("Produto mais caro: R$", maior_preco)
else:
    print("Nenhum produto foi registrado.")
